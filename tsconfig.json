{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "outDir": "./built",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./src/**/*"],
  "types": [
    "node",
    "node-jose"
  ]
}